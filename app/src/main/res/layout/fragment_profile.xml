<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <Button
        android:id="@+id/btFGLogOut"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#bc2a8d"
        android:text="LOG OUT"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btAddProfilePhoto"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btFGLogOut"
        android:layout_centerHorizontal="true"
        android:background="#cd486b"
        android:layout_marginBottom="5dp"
        android:text="Change Profile Photo"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/ibProfilePhoto"
        android:layout_width="62dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-12dp"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@+id/btFGLogOut"
        android:background="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_above="@+id/btAddProfilePhoto"
        android:layout_below="@+id/ibProfilePhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="72dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/tvFGProfUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="57dp"
        android:text="username"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivNav"
        android:layout_width="343dp"
        android:layout_height="36dp"
        android:layout_above="@+id/rvProfileLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-68dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/profbar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/tvFGProfUser"
        android:layout_alignEnd="@+id/ivNav"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/editprofile" />

</RelativeLayout>